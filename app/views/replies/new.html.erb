<%= link_to "Back to post", post_path(@post) %><br/>

<h2>have your say about <em><%= @post.title %></em>.</h2>

<%= form_for([@post, @reply]) do |f| %>
  <% if @reply.errors.any? %>
    <div>
      <%= pluralize(@reply.errors.count, "error") %> prevented the reply from being saved:
      <ul>
        <% @reply.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :text %><br>
    <%= f.text_area "text" %>
  </div>
  <div>
    <%= f.label :rating_out_of_ten %><br>
    <%= f.number_field :rating_out_of_ten %>
  </div>
  <div><%= f.submit "Submit" %></div>
<% end %>